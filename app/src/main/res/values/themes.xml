<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IsIt" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/smoke</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Theme.IsIt" parent="Base.Theme.IsIt" />

    <style name="TextInputLayoutFilledStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="android:elevation">5dp</item>
        <item name="boxStrokeColor">@color/gas</item>
        <item name="boxStrokeWidth">0.5dp</item>

    </style>

</resources>